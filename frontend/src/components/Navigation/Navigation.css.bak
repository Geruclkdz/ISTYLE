nav {
    width: 20vw;
    height: 100%;
    background: #D9D9D9;

    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

nav > img {
    margin: 1em;
}

span, a{
    text-decoration: none;
    display: inline-block;
    line-height: 2em;
}

li span {
    padding: 0.8em;
}

ul {
    list-style-type: none;
    color: #666666;
    height: 100%;
    margin: 0 auto;
    padding: 0;
    display: flex;
    flex-direction: column;
    position: relative;

}

li a {
    text-align: center;
    width: 100%;
    margin: 0 auto;
    padding: 0.2em;
    color: #666666;
}

li:last-child {
    position: absolute;
    bottom: 0;
    width: 100%;
    margin-bottom: 1em;
}

.logout_button {
    width: 100%;
    color: #666666;
    background: none;
    border: none;
    cursor: pointer;
    font-size: 0.8em;
}

@media only screen and (max-width: 600px) {
    nav {
        width: 100%;
        height: auto;
        position: fixed;
        bottom: 0;
        left: 0;
        z-index: 1000; /* Ensure it's on top of other content */
    }

    nav > img {
        display: none;
    }

    ul {
        flex-direction: row; /* Align list items horizontally */
        justify-content: space-around; /* Evenly distribute items */

    }

    li:last-child {
        display: none;
    }

    .material-symbols-sharp
    {
        font-size: 32px !important;
    }
}
