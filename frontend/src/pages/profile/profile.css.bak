#root {
    display: flex;
    flex-direction: row;
}

.profilePic {
    border-radius: 100%;
    width: 4em;
    height: 4em;
    margin: 1em;
}

.page {
    display: flex;
    flex-direction: column;
    width: 75%;
}

.fitPic{
        width: 8em;
        height: 12em;
        object-fit: cover;
        border-radius: 0.5em;
        border: 1px solid #9D9EA2;
        margin: 1em;
        -webkit-box-shadow: inset 12px 12px 46px -31px rgba(0, 0, 0, 1);
        -moz-box-shadow: inset 12px 12px 46px -31px rgba(0, 0, 0, 1);
        box-shadow: inset 12px 12px 46px -31px rgba(0, 0, 0, 1);

}

.profile-container{
    display:flex;
    flex-direction:column;
    gap:0.5rem;
}

.profile-header{
    display:flex;
    align-items:center;
    gap:0.75rem;
}

.profile-details{
    display:flex;
    flex-direction:column;
    gap:0.25rem;
}

.profile-details h2{
    margin:0;
    font-size:1.25rem;
}

.follow-btn{
    padding:6px 10px;
    background:#1976d2;
    color:#fff;
    border:none;
    border-radius:6px;
    cursor:pointer;
}
